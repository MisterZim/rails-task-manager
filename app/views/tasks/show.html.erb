<h1><%= @task.title %></h1>

<div class= "bg-secondary">
  <p><%= @task.details %></p>
</div>

<%= form_for(@task) do |f| %>
  <% if @task.completed %>
    <%= f.check_box :completed %>
    <%= f.label "The task is completed" %>
  <% else %> 
    <%= f.check_box :completed %>
    <%= f.label "The task is not completed yet" %>
  <% end %>
<% end %>


<%= link_to "Back to the list", tasks_path, class: "btn btn-primary" %>
